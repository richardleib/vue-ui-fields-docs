{
	"name": "vue-ui-fields-tests",
	"version": "1.0.0",
	"description": "My grand Matise Nuxt.js project",
	"author": "Dennis Dipsaus",
	"private": true,
	"scripts": {
		"dev": "sh scripts/dev.sh",
		"devlocal": "sh scripts/devlocal.sh",
		"netlify:staging": "sh scripts/staging.sh",
		"netlify:production": "sh scripts/production.sh",
		"lint": "eslint --ext .js,.vue --ignore-path .gitignore .",
		"lintfix": "eslint --ext .js,.vue --ignore-path .gitignore . --fix",
		"precommit": "lint",
		"generate": "nuxt generate",
		"stylelint": "stylelint '**/*.vue' '**/*.scss'",
		"stylelint:fix": "stylelint '**/*.vue' '**/*.scss' --fix"
	},
	"dependencies": {
		"@matise/ui-fields": "^4.0.22",
		"@nuxtjs/axios": "^5.9.5",
		"@nuxtjs/style-resources": "^1.0.0",
		"matise-gryd": "^1.0.9",
		"nuxt": "^2.12.0",
		"vue-code-highlight": "^0.7.4",
		"vue-ui-fields": "^4.1.0"
	},
	"devDependencies": {
		"@nuxtjs/google-analytics": "^2.2.3",
		"babel-eslint": "^10.0.3",
		"eslint": "^6.8.0",
		"eslint-config-prettier": "^6.10.0",
		"eslint-friendly-formatter": "^4.0.1",
		"eslint-loader": "^3.0.3",
		"eslint-plugin-nuxt": "^0.5.1",
		"eslint-plugin-only-warn": "^1.0.2",
		"eslint-plugin-prettier": "^3.1.2",
		"eslint-plugin-vue": "^6.2.2",
		"eslint-plugin-vue-libs": "^4.0.0",
		"node-sass": "^4.13.1",
		"nuxt-rfg-icon": "^0.6.4",
		"sass-loader": "^8.0.2"
	},
	"browserslist": [
		"last 2 versions",
		"not dead"
	],
	"stylelint": {
		"rules": {
			"at-rule-no-unknown": [
				true,
				{
					"ignoreAtRules": [
						"if",
						"for",
						"else",
						"each",
						"mixin",
						"include",
						"content",
						"extend"
					]
				}
			],
			"order/order": [
				"custom-properties",
				"dollar-variables",
				"declarations",
				"rules"
			],
			"indentation": "tab"
		},
		"extends": [
			"stylelint-logical-order"
		]
	}
}
